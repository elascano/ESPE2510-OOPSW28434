import random

class Egg:
    def _init_ (self):
        sizes_available=['S','M','L']
        size = random.choice(sizes_available)
        self.size = size

    def _str_(self):
        return f"size --> \t{self.size}"
    
    def size(self):
        return self._size
    
    def size(self, size):
        self._size = size
