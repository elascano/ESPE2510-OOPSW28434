while True:
    # Pedimos el número al usuario
    n = int(input("\n¿De qué número quieres ver la tabla de multiplicar? "))

    print(f"\nTabla del {n}")
    print("-" * 15)

    # Mostramos la tabla
    for i in range(1, 13):
        print(f"{n} x {i} = {n * i}")

    repetir = input("\n¿Quieres ver otra tabla? (s/n): ").lower()

    if repetir != "s":
        print("\n¡Gracias por usar el programa! ")
        break
